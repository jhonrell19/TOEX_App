<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TOEX_App" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color (using the dark purple theme from earlier examples) -->
        <item name="colorPrimary">@color/colorPrimary</item> <!-- e.g., #3A2355 -->
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item> <!-- e.g., #2C1F4B -->
        <item name="colorOnPrimary">@color/white</item> <!-- Text/icons on primary color -->

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorAccent</item> <!-- e.g., #E91E63 or your yellow -->
        <item name="colorSecondaryVariant">@color/colorAccent</item> <!-- Can be a darker shade of secondary -->
        <item name="colorOnSecondary">@color/black</item> <!-- Text/icons on secondary color -->

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Window background (using the dark purple theme) -->
        <item name="android:windowBackground">@color/colorPrimaryDark</item>

        <!-- Customize your theme here. -->
        <!-- For EditText underlines, button styles etc., you might have specific styles
             or apply them directly in layouts.
             For example, if you used button_rounded_white for buttons:
             <item name="materialButtonStyle">@style/Widget.App.Button</item>
        -->
    </style>

